{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "SystemName": {
      "type": "string"
    },
    "WorkerConfigurations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Type": {
            "type": "string"
          },
          "NumberOfInstances": {
            "type": "integer"
          },
          "InstanceConfiguration": {
            "type": "object",
            "properties": {
              "ExchangeName": {
                "type": "string"
              },
              "ExchangeType": {
                "type": "string"
              },
              "RoutingKeys": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "AllowedRetries": {
                "type": "integer"
              },
              "PublishToConfig": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "Name": {
                      "type": "string"
                    },
                    "ExchangeName": {
                      "type": "string"
                    },
                    "RoutingKey": {
                      "type": "string"
                    },
                    "ExchangeType": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "Name",
                    "ExchangeName",
                    "RoutingKey",
                    "ExchangeType"
                  ]
                }
              },
              "CustomSettings": {
                "type": "object",
                "properties": {}
              }
            },
            "required": [
              "ExchangeName",
              "ExchangeType",
              "RoutingKeys",
              "AllowedRetries",
              "PublishToConfig",
              "CustomSettings"
            ]
          }
        },
        "required": [
          "Type",
          "NumberOfInstances",
          "InstanceConfiguration"
        ]
      }
    }
  },
  "required": [
    "SystemName",
    "WorkerConfigurations"
  ]
}